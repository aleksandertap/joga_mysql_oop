<p class="breadcrumbs"><a href="/admin">Admin</a> &raquo;
<h1>Users</h1>

<table>
    <thead>
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Email</th>
            <th>Role</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {{#each users}}
        <tr>
            <td>{{id}}</td>
            <td>{{username}}</td>
            <td>{{email}}</td>
            <td>{{role}}</td>
            <td>
                <a href="/admin/user/edit/{{id}}">Edit</a>
                {{#if (ne role "admin")}}
                    <form method="post" action="/admin/user/delete/{{id}}">
                        <input type="hidden" name="action" value="delete">
                        <button class="danger">Delete</button>
                    </form>
                {{/if}}
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>